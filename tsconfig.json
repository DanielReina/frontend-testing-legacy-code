{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "types": ["jest","cypress", "node", "testing-library__jest-dom"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
